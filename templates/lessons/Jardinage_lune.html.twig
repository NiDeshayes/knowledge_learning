        <input type="submit" value="Soumettre">
    </form>

    <div id="quizResult" style="margin-top: 20px;"></div>

    <button id="validateLessonButton" style="margin-top: 20px;">Valider la leçon</button>

    <script>
        document.getElementById('quizForm').addEventListener('submit', function(event) {
            event.preventDefault();

            // Réponses correctes
            const correctAnswers = {
                q1: 'b',
                q2: 'c',
                q3: 'c',
                q4: 'c',
                q5: 'b',
                q6: 'a',
                q7: 'c',
                q8: 'b',
                q9: 'b',
                q10: 'b'
            };

            let score = 0;
            let totalQuestions = 10;

            // Vérification des réponses
            for (let i = 1; i <= totalQuestions; i++) {
                let question = document.querySelector(`input[name="q${i}"]:checked`);
                if (question && question.value === correctAnswers[`q${i}`]) {
                    score++;
                }
            }

            // Afficher le résultat
            let resultDiv = document.getElementById('quizResult');
            if (score === totalQuestions) {
                resultDiv.innerHTML = `<p>Bravo ! Vous avez obtenu un score parfait de ${score}/${totalQuestions} !</p>`;
            } else {
                resultDiv.innerHTML = `<p>Vous avez obtenu un score de ${score}/${totalQuestions}. Continuez à apprendre !</p>`;
            }
        });

        document.getElementById('validateLessonButton').addEventListener('click', function() {
            alert('Leçon validée !');
            // Logique pour marquer la leçon comme validée peut être ajoutée ici
        });
    </script>
